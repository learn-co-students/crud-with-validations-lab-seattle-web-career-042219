<%= form_for @song do |f| %>
    <% if @song.errors.messages.any? %>
        <div id="error-explanation">
            <p>Errors: </p>
            <ul style = "list-unstyled">
                <% @song.errors.full_messages.each do |message| %>
                    <li class="field_with_errors"><%= message %></li>
                <% end %>    
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :released %><br>
        <%= f.check_box :released %>
    </div>
    <div class="field">
        <%= f.label :release_year %><br>
        <%= f.number_field :release_year %>
    </div>
    <div class="field">
        <%= f.label :genre %><br>
        <%= f.text_field :genre %>
    </div>
    <div class="field">
        <%= f.label :artist_name %><br>
        <%= f.text_field :artist_name %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>